#include <stdio.h>

int main(void)
{
	int x, counter1, counter2, counter3;
	scanf("%d", &x);

	for(counter1 = 1; counter1 <= x; counter1++)
	{
		for(counter2 = x - counter1; counter2 > 0; counter2--)
		{
			printf(" ");
		}

		for(counter3 = 0; counter3 < counter1; counter3++)
		{
			printf("* ");
		}

		printf("\n");
	}

    return 0;
}

//Printing pattern like this: if input x = 23;
